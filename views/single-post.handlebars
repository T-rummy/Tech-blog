<div class="card price">

  <div class="title">
    <a  href="{{post.post_url}}" target="_blank">{{post.title}}</a>
    <span  >({{post.post_url}})</span>
  </div>
  <div >
    <a class="price" href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>




<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}